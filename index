    <script>
        function toggleMethod() {
            const selectedValue = document.getElementById("paymentMode").value;
            // Get all detail sections
            const detailSections = document.querySelectorAll(".payment-details");

            // Hide all sections first
            detailSections.forEach(section => {
                section.classList.remove("active");
            });

            // Show the selected one
            if (selectedValue) {
                const selectedSection = document.getElementById(selectedValue + "-details");
                if (selectedSection) {
                    selectedSection.classList.add("active");
                }
            }
        }

        function sendWhatsApp() {
            const name = document.getElementById("name").value.trim();
            const purpose = document.getElementById("purpose").value.trim();
            const txnid = document.getElementById("txnid").value.trim();
            const mode = document.getElementById("paymentMode").value;
            const orderId = "ORD" + Date.now(); // Simple unique ID

            // Basic validation
            if (!name || !purpose || !txnid || !mode) {
                alert("Please fill in all confirmation details, including the payment method used.");
                return;
            }

             // Format payment mode for display
            let modeDisplay = mode.toUpperCase();
             if (mode === 'bank') modeDisplay = 'Bank Transfer';
             if (mode === 'qr') modeDisplay = 'QR Scan';
             if (mode === 'mobile') modeDisplay = 'Mobile Number Transfer';


             // Encode message components properly for URL
             const msg = encodeURIComponent(
                `ðŸ§¾ *Payment Confirmation*\n` +
                `ðŸ‘¤ *Name:* ${name}\n` +
                `ðŸ’¼ *Purpose:* ${purpose}\n` +
                `ðŸ’³ *Mode:* ${modeDisplay}\n` +
                `ðŸ“Ž *Txn ID/Ref:* ${txnid}\n` +
                `ðŸ†” *Order ID:* ${orderId}`
            );

            // Replace with your actual WhatsApp number
            const phone = "919284157202";
            const url = `https://wa.me/${phone}?text=${msg}`;

            window.open(url, "_blank");
        }

        // Initialize visibility on page load (optional, default is hidden)
        // toggleMethod(); // Uncomment if you want a section shown by default based on initial select value

    </script>
